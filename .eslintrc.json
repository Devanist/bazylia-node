{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["prettier", "airbnb-base"],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "linebreak-style": 0,
    "prettier/prettier": "error",
    "no-underscore-dangle": 0,
    "import/prefer-default-export": "off",
    "arrow-parens": 0,
    "import/extensions": ["always"]
  }
}
